<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Explicit problematic domains -->
        <domain includeSubdomains="true">starshare.st</domain>
        <domain includeSubdomains="true">afpanel.one</domain>
        
        <!-- IP-based streams -->
        <domain includeSubdomains="true">103.175.73.12</domain>
        <domain includeSubdomains="true">210.89.51.165</domain>
        <domain includeSubdomains="true">xott.live</domain>

        <!-- General streaming domains -->
        <domain includeSubdomains="true">*.live</domain>
        <domain includeSubdomains="true">*.stream</domain>
        <domain includeSubdomains="true">*.m3u8</domain>
        <domain includeSubdomains="true">*.mp4</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Trust all certificates for streaming (use cautiously) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">*</domain>
    </domain-config>
</network-security-config>
